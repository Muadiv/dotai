{
  "permissions": {
    "allow": [
      "Bash(uv *)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(ls *)"
    ],
    "deny": [
      "Read(.env)",
      "Edit(.env)",
      "Bash(cat .env*)",
      "Read(~/.ssh/**)"
    ],
    "ask": [
      "Bash(git push *)",
      "Bash(git commit *)",
      "Bash(rm *)",
      "Bash(sudo *)",
      "Bash(python *)",
      "Read(.env.*)",
      "Edit(.env.*)"
    ],
    "defaultMode": "acceptEdits",
    "disableBypassPermissionsMode": "disable"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  }
}
